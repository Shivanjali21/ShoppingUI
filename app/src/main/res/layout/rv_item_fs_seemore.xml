<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mcvFSSMRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvFSSMImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFSSMImg"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fs_model_one"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvFSSMName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="8dp"
            android:textSize="12sp"
            android:textColor="@color/colorHint"
            android:fontFamily="@font/montserratsb"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toStartOf="@+id/mtvFSSMPrice"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/mcvFSSMImg"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvFSSMPrice"
            style="@style/Theme.TextColorGrey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorHint"
            android:fontFamily="@font/montserratsb"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/mtvFSSMName"
            app:layout_constraintTop_toTopOf="@id/mtvFSSMName"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvFSSMCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:layout_marginVertical="6dp"
            android:textSize="12sp"
            android:textColor="@color/colorHint"
            android:fontFamily="@font/montserratmedium"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/mcvFSSMImg"
            app:layout_constraintTop_toBottomOf="@id/mtvFSSMName"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvFSSMSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/montserratsb"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/mcvFSSMImg"
            app:layout_constraintTop_toBottomOf="@id/mtvFSSMCode"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvFSSMColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:textSize="12sp"
            android:text="Color:"
            android:textColor="@color/colorHint"
            android:fontFamily="@font/montserratsb"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/mcvFSSMImg"
            app:layout_constraintTop_toBottomOf="@id/mtvFSSMSize"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFSSMColor"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@color/colorTheme"
            app:layout_constraintBottom_toBottomOf="@id/mtvFSSMColor"
            app:layout_constraintStart_toEndOf="@id/mtvFSSMColor"
            app:layout_constraintTop_toTopOf="@id/mtvFSSMColor"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>